# Redaptive Agentic Platform Configuration

# Environment
ENVIRONMENT=development
DEBUG=false
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=energy_db
DB_ENERGYAPP_USER=energy_user
DB_ENERGYAPP_PASSWORD=your_secure_password_here

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=30
LOG_LEVEL=INFO

# Orchestration Settings
ENABLE_INTELLIGENT_ROUTING=true
MAX_WORKFLOW_DEPTH=10
CACHE_ENABLED=true

# Redis Configuration (Optional - for IoT streaming)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Streaming Configuration (For IoT data processing)
STREAMING_BACKEND=auto
STREAMING_BATCH_SIZE=100
STREAMING_MAX_RETRIES=3
STREAMING_CONSUMER_TIMEOUT=30

# Kafka Configuration (Optional - for IoT streaming) 
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# Monitoring (Optional)
PROMETHEUS_PORT=8000
ENABLE_METRICS=false
ENABLE_TRACING=false

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here