# Redaptive Agentic Platform Configuration

# Environment
ENVIRONMENT=development
DEBUG=false
API_VERSION=v1


# UI App server configuration
APP_HOST=your_app_host_here
APP_PORT=your_app_port_here
APP_URL=http://${APP_HOST}:${APP_PORT}


# Database Configuration
## Energy as a Service Database
DB_HOST_ENERGY=your_database_host_here
DB_PORT_ENERGY=your_database_port_here
DB_NAME_ENERGY=your_database_name_here
DB_USER_ENERGY=your_user_name_here
DB_USERPASSWORD_ENERGY=your_secure_password_here
### Admin credentials (for setup only)
DB_ADMIN_ENERGY=your_admin_user_name_here
DB_ADMIN_ENERGY_PASSWORD=your_admin_password_here

# Benefits Database
DB_HOST_BENEFITS=your_database_host_here
DB_PORT_BENEFITS=your_database_port_here
DB_NAME_BENEFITS=your_database_name_here
DB_USER_BENEFITS=your_user_name_here
DB_USERPASSWORD_BENEFITS=your_secure_password_here
### Admin credentials (for setup only)
DB_ADMIN_BENEFITS=your_admin_user_name_here
DB_ADMIN_BENEFITS_PASSWORD=your_admin_password_here


# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=30
LOG_LEVEL=INFO


# Orchestration Settings
ENABLE_INTELLIGENT_ROUTING=true
MAX_WORKFLOW_DEPTH=10
CACHE_ENABLED=true


# Redis Configuration (Optional - for IoT streaming)
REDIS_HOST=your_redis_host_here
REDIS_PORT=your_redis_port_here
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=your_redis_db_here

# Streaming Configuration (For IoT data processing)
STREAMING_BACKEND=auto
STREAMING_BATCH_SIZE=100
STREAMING_MAX_RETRIES=3
STREAMING_CONSUMER_TIMEOUT=30

# Kafka Configuration (Optional - for IoT streaming) 
KAFKA_BOOTSTRAP_SERVERS=your_kafka_bootstrap_server_here:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# Monitoring (Optional)
PROMETHEUS_PORT=your_prometheus_port_here
ENABLE_METRICS=false
ENABLE_TRACING=false

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here


# Preferred LLM Provider for Learning-based Planning
# Options: "openai" or "anthropic"
PREFERRED_LLM_PROVIDER=openai
## AI/ML Provider Credentials
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here


# AWS Credentials for Textract
AWS_REGION=your_aws_region_here
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
# AWS_SESSION_TOKEN=your_session_token  # Only needed if using temporary credentials

